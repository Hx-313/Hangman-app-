<!-- bottom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with transparent color -->
    <item android:drawable="@android:color/transparent" />

    <!-- Bottom border -->
    <item
        android:top="-4dp"
        android:right="-4dp"
        android:left="-4dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="6dp"
                android:color="#10173E" />
        </shape>
    </item>
</layer-list>
