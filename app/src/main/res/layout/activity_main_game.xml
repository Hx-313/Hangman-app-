<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMainGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/image"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/buttonbg"
                android:scaleX="@integer/material_motion_duration_long_2"
                android:text="@string/game_mode"
                />
            <TextView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textColor="@color/white"

                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/triesImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/guess"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/image"
        android:background="@drawable/buttonbg"
        android:scaleX="@integer/material_motion_duration_medium_2"

        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@id/guess"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/guessArea"

        >

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guessArea"
        android:background="@drawable/keyboard"
        android:id="@+id/kbview"
        android:scaleType="fitXY" />
    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignTop="@id/kbview"
        android:rowCount="3"
        android:columnCount="9"

        >

    </GridLayout>

</RelativeLayout>